<EncuestasScreen>:
    MDBoxLayout:
        md_bg_color: self.theme_cls.backgroundColor
    MDBoxLayout:
        padding: 10,10
        orientation: 'vertical'
        MDLabel:
            text: 'Seleccione la encuesta que desea aplicar:'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
        MDRecycleView:
            id: rv
            viewclass: 'EListItem'
            RecycleBoxLayout:
                spacing: dp(5)
                padding: 10
                default_size_hint: 1, None 
                size_hint_y: None 
                height: self.minimum_height 
                orientation: 'vertical'
    MDBoxLayout:
        adaptive_height: True
        MDAnchorLayout:
            MDButton:
                on_release: 
                    root.manager.current = app.user_type
                MDButtonText:
                    text: "Cancelar"
<EListItem>:
    orientation: 'horizontal'
    style: 'elevated'
    adaptive_height: True
    on_release: root.save()
    MDBoxLayout:
        adaptive_width: True
        MDIcon:
            icon: "form-select"                
            size_hint: None, None
            pos_hint: {"center_y": 0.5}

    MDBoxLayout:
        adaptive_height: True
        orientation: 'vertical'
        MDLabel:
            text: root.title
            theme_text_color: 'Primary'
            size_hint_y: None
            height: self.texture_size[1]
            max_lines: 2
            
        MDLabel:
            role: 'medium'
            text: root.description
            theme_text_color: 'Custom'
            text_color: [0,0,0,0.8]
            size_hint_y: None
            height: self.texture_size[1]
            max_lines: 3
            
        MDLabel:
            role: 'small'
            text: root.formId
            theme_text_color: 'Custom'
            text_color: [0,0,0,0.6]
            size_hint_y: None
            height: self.texture_size[1]
            shorten: True
        