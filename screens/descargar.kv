#         text: root.text 
#         halign: 'center'
            # data: [{'text': str(x)} for x in range(20)] 
<RListItem@MDCard>:   
    text: ''     
    adaptive_height: True            
    orientation: 'horizontal'     
    spacing: dp(10)
    padding: 10,30
    elevation: 2

    MDIcon:
        icon: "form-select"                
        size_hint: None, None
        size: dp(48), dp(48)
        pos_hint: {"center_y": 0.5}
    
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True                 
        
        MDLabel:
            md_bg_color: (1,1,0,0.5)
            text: root.text
            halign: 'left'
            theme_text_color: 'Primary'
            size_hint_y: None
            height: self.texture_size[1]
        
        MDButton:
            pos_hint: {"right": 1}
            on_press: 
                app.root.current = 'principal'                
                app.root.transition.direction = "left"  
            MDButtonIcon:
                icon: "download"
            
            MDButtonText:
                text: "Descargar"                         
