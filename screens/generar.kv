<GenerarScreen>:
    MDBoxLayout:        
        md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        md_bg_color: self.theme_cls.secondaryContainerColor
        orientation: 'vertical'

        MDTopAppBar:
            type: "small"   
            size_hint_x: 1

            MDTopAppBarLeadingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "menu"
                    on_press:
                        root.manager.current = app.user_type

            MDTopAppBarTitle:
                text: "Mis registros"
            
        MDRecycleView:
            id: rv
            viewclass: 'GListItem'
            RecycleBoxLayout:
                spacing: dp(5)
                padding: 10
                default_size_hint: 1, None 
                size_hint_y: None 
                height: self.minimum_height 
                orientation: 'vertical' 

<GListItem>:
    orientation: 'horizontal'
    style: 'outlined'
    on_release: root.save()
    user_id: str(app.user._id)
    MDIcon:
        icon: "form-select"                
        size_hint: None, None
        pos_hint: {"center_y": 0.5}

    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: root.info[0]
            theme_text_color: 'Primary'
            text_size: root.width, None
            size: self.texture_size
            shorten: True
            
        MDLabel:
            role: 'small'
            text: root.form_id
            theme_text_color: 'Primary'
            text_size: root.width, None
            size: self.texture_size
            shorten: True
            
        MDLabel:
            role: 'small'
            text: f'{root.info[1]} respuestas'
            theme_text_color: 'Primary'
            text_size: root.width, None
            size: self.texture_size
            shorten: True
        